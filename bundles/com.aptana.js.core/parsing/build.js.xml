<?xml version="1.0" encoding="UTF-8"?>
<project name="JS parsers build" default="build">
    <description>
            Builds the JS related parsers.
    </description>

    <taskdef name="jflex" classname="JFlex.anttask.JFlexTask">
        <classpath>
           <!-- 
           Note: Path must be updated to proper JFlex location for building it.
            Hardcoded for now as we don't have JFlex on our distribution (so, needs to be
            updated to the proper path if someone else needs to re-generate the parser again).
            -->
            <pathelement location="../../beaver/JFlex.jar" />
        </classpath>
    </taskdef>

    <taskdef name="beaver" classname="beaver.comp.run.AntTask" classpath="../../beaver/bin"/>

	<target name="antlr">
		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" dir="../src/com/aptana/js/core/parsing/antlr">
			<arg value="-o"/>
			<arg value="${basedir}/../src/com/aptana/js/core/parsing/antlr"/>
			<arg value="-package"/>
            <arg value="com.aptana.js.core.parsing.antlr"/>
            <arg line="${basedir}/JSLexer.g4"/>
            <classpath>
                <pathelement location="${basedir}/../lib/antlr-4.7-complete.jar"/>
                <pathelement location="${java.class.path}"/>
            </classpath>
        </java>
		
		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" dir="../src/com/aptana/js/core/parsing/antlr">
			<arg value="-o"/>
			<arg value="${basedir}/../src/com/aptana/js/core/parsing/antlr"/>
			<arg value="-package"/>
            <arg value="com.aptana.js.core.parsing.antlr"/>
            <arg line="${basedir}/JSParser.g4"/>
            <classpath>
                <pathelement location="${basedir}/../lib/antlr-4.7-complete.jar"/>
                <pathelement location="${java.class.path}"/>
            </classpath>
        </java>
	</target>
	
    <target name="build">
        <jflex 
            file="JS.flex" 
            outdir="../src/com/aptana/js/core/parsing" 
            nobak="on"/>
        
        <jflex 
            file="SDoc.flex" 
            outdir="../src/com/aptana/js/internal/core/parsing/sdoc" 
            nobak="on"/>
        
        <beaver 
            file             = "JS.grammar"
            destdir          = "../src"
            exportTerminals  = "yes"
            useSwitch        = "yes"/>
        
        <beaver 
            file             = "SDoc.grammar"
            destdir          = "../src"
            exportTerminals  = "yes"
            useSwitch        = "yes"/>
        
    </target>
                
                
    
</project>
